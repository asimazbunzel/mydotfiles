[user]
    name = Adolfo Simaz Bunzel
    email = asimazbunzel@gmail.com
[core]
    editor = nvim
[color]
    ui = true
    pager = true
    diff = auto
    status = auto
    branch = auto
[alias]
    hist = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset - %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    co = checkout
    last = log -1 HEAD
    ranking = "!git shortlog | egrep -v '^ |^$' | sed -e 's/^\\(.*\\) (\\(.*\\)):/\\2 \\1/' | sort -rn"
    logdiff = log -p -U0
    ck4pull = remote show origin
[blame]
    date = short
[init]
	defaultBranch = main
